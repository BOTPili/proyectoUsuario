<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardV">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ivPlateImage"
            android:layout_width="300dp"
            android:layout_height="327dp"
            android:background="@drawable/assorted_sliced_fruits_in_white_ceramic_bowl_1092730_1__1_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/cardInfo"
            android:layout_width="237dp"
            android:layout_height="105dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bordeview"
            app:layout_constraintBottom_toBottomOf="@id/ivPlateImage"
            app:layout_constraintLeft_toLeftOf="@id/ivPlateImage"
            app:layout_constraintRight_toRightOf="@id/ivPlateImage" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="79dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="#EDA345"
            android:fontFamily="@font/poppins"
            android:padding="0dp"
            android:shadowRadius="20"
            android:text="Ver detalle"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/cardInfo"
            app:layout_constraintRight_toRightOf="@id/cardInfo"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_bold"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintLeft_toLeftOf="@id/cardInfo"
            app:layout_constraintTop_toTopOf="@id/cardInfo"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/description_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_plate"
            android:fontFamily="@font/poppins_medium"
            android:textSize="11sp"
            android:textColor="@color/subtitles"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintLeft_toLeftOf="@id/tvName"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColor="@color/text_bold"
            app:layout_constraintTop_toBottomOf="@id/description_product"
            app:layout_constraintLeft_toLeftOf="@id/description_product"/>
        <TextView
            android:id="@+id/type_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_plate"
            android:textColor="@color/texts_colour"
            android:fontFamily="@font/poppins_medium"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            app:layout_constraintLeft_toLeftOf="@+id/tvPrice"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>